<p style="color: green"><%= notice %></p>

<h1 class="text-bg-info p-3, position-absolute top-5 start-50">Students</h1>

<div id="students">
  <% @students.each do |student| %>
    <%= render student %>
    <p>
      <%= link_to "Show this student", student, class:"btn btn-success" %>
    </p>
  <% end %>
</div>

<%= link_to "New student", new_student_path, class:"badge text-bg-primary" %>
